{
  // Editor
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "first",
  "editor.cursorBlinking": "solid",
  "editor.fontFamily": " MesloLGS NF",
  "editor.snippetSuggestions": "bottom",

  // Workbench
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.iconTheme": "vscode-icons",

 // Python
 "python.formatting.blackPath": "black",
 "python.showStartPage": false,
 "python.terminal.activateEnvInCurrentTerminal": true,
 "python.venvFolders": ["venv", ".venv"],
 "python.terminal.activateEnvironment": true,
 "python.terminal.launchArgs": [
  "-m",
  "IPython",
  "--no-autoindent",
  ],

  // Git
  "git.autofetch": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": true,
  "git.enableSmartCommit": true,

  // Terminal
  "terminal.integrated.fontFamily": " MesloLGS NF",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.shell.windows": "C:\\Users\\qxo1686\\AppData\\Local\\Programs\\Git\\bin\\bash.exe",
  "terminal.integrated.enableBell": false

  // Mermaid
  "mermaid-editor.preview.theme": "dark",
  "mermaid-editor.preview.backgroundColor": "white",
  "mermaid-editor.generate.type": "svg",

  // RevealJS
  "revealjs.slideNumber": true,
  "revealjs.theme": "simple",
  "revealjs.highlightTheme": "Gruvbox",

  // Kite
  "kite.showWelcomeNotificationOnStartup": false,

  // Project Manager
  "projectManager.git.baseFolders": [
    "C:\\Users\\qxo1686\\Projekte"
  ],

   // VIM 
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<leader>","<Esc>"],
      "commands": [":nohl"]
    },
    {
      "before":["U"],
      "after":["<C-r>"]
    },
    // Markdown
    {
      "before": ["g", "r"],
      "commands": ["references-view.find"]
    },
    // peek references inline with gR
    {
      "before": ["g", "R"],
      "commands": ["editor.action.referenceSearch.trigger"]
    },
    // open definition in new editor group with gs
    {
      "before": ["g", "s"],
      "commands": ["editor.action.revealDefinitionAside"]
    },
    {
      // peek definition inline with gD
      "before": ["g", "D"],
      "commands": ["editor.action.peekDefinition"]
    },
    // open link with gx
    {
      "before": ["g", "x"],
      "commands": ["editor.action.openLink"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },

  //DrawIO
  "hediet.vscode-drawio.local-storage": "",
}