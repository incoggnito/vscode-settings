{
  // Editor
  "editor.minimap.enabled": true,
  "editor.tabCompletion": "on",
  "editor.cursorBlinking": "solid",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[JSON]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[YAML]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,

  // Workbench
  "workbench.editor.enablePreview": true,
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.iconTheme": "vscode-icons",

  // Python
  "python.defaultInterpreterPath": "${workspaceFolder}/venv/bin/python",
  "python.analysis.indexing": true,
  "python.analysis.extraPaths": ["./src"],
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "python.languageServer": "Default",
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.venvFolders": ["venv", ".venv"],
  "python.terminal.activateEnvironment": true,
  "python.terminal.launchArgs": ["-m", "IPython", "--no-autoindent"],
  "python.linting.pylintEnabled": true,
  "python.linting.pylintCategorySeverity.warning": "Hint",
  "python.linting.maxNumberOfProblems": 100,
  "python.linting.pylintArgs": ["--enable=W0614"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.isort.args": ["--profile", "black"],

  // Git
  "git.autofetch": true,
  "git.ignoreRebaseWarning": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": true,
  "git.enableSmartCommit": true,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
    "branch-create:command"
  ],

  // Terminal
  "terminal.integrated.fontFamily": " MesloLGS NF",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.enableBell": false,
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // RevealJS
  "revealjs.slideNumber": true,
  "revealjs.theme": "simple",
  "revealjs.highlightTheme": "Gruvbox",
  "revealjs.browserPath": "C:\\Users\\ahofer\\AppData\\Local\\BraveSoftware\\Brave-Browser\\Application\\brave.exe",

  // Kite
  "kite.showWelcomeNotificationOnStartup": false,

  // Project Manager
  "projectManager.svn.maxDepthRecursion": 1,
  "projectManager.git.maxDepthRecursion": 2,
  "projectManager.any.maxDepthRecursion": 1,
  "projectManager.git.baseFolders": [
    "$home\\AppData\\Roaming\\Code\\User",
    "C:\\Projekt",
    "$home\\Projekt",
    "$home/.config/Code/User",
    "$home/.dotfiles"
  ],
  "projectManager.git.ignoredFolders": ["node_modules", "out", "typings", "test", ".haxelib", "venv"],

  // Spell
  "cSpell.language": "en,de",

  // VIM
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 400,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    },
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["whichkey.show"]
    },
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["U"],
      "commands": ["redo"]
    },
    {
      "before": ["<esc><esc>"],
      "commands": [":nohl"]
    },
    {
      "before": ["H"],
      "commands": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    // Select all
    "<C-a>": false,
    // VS Code search in file
    "<C-f>": false,
    // VS Code new marker @ next occurence
    "<C-d>": false,
    // Copy
    "<C-c>": false,
    // Cut
    "<C-x>": false,
    // Paste
    "<C-v>": false
  },
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["whichkey.show"]
    }
  ],
  //DrawIO
  "todo-tree.tree.showScanModeButton": false,
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "XXX", "[ ]", "[x]"],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "jupyter.askForKernelRestart": false,
  "interactiveWindow.collapseCellInputCode": "never",
  "editor.largeFileOptimizations": false,
  // Gitlab
  "gitlab.ignoreCertificateErrors": true,
  "gitlab.instanceUrl": "https://git.amitronics.net/",
  "projectManager.svn.ignoredFolders": ["node_modules", "out", "typings", "test", "venv"],
  "projectManager.hg.maxDepthRecursion": 1,
  "projectManager.hg.ignoredFolders": ["node_modules", "out", "typings", "test", ".haxelib", "venv"],
  "projectManager.vscode.ignoredFolders": ["node_modules", "out", "typings", "test", "venv"],
  "vsicons.dontShowNewVersionMessage": true,
  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.autoSave": "onFocusChange",
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "remote.SSH.remotePlatform": {
    "192.168.105.59": "linux",
    "DockerVM": "linux",
    "App": "linux",
    "DockerDev": "linux",
    "192.168.105.108": "linux"
  },
  "cSpell.userWords": ["filt", "Kanban", "postgresql", "sqlalchemy", "TISAX"],
  "explorer.confirmDelete": false,
  "task.problemMatchers.neverPrompt": {
    "austin": true
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "markdown.marp.enableHtml": true,
  "markdown.marp.exportType": "html",
  "emmet.includeLanguages": {
    "markdown": "html"
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "autoDocstring.docstringFormat": "numpy",
  "files.exclude": {
    "out": true, // set this to true to hide the "out" folder with the compiled JS files
    "dist": true,
    "**/*.pyc": true,
    ".nyc_output": true,
    "obj": true,
    "bin": true,
    "**/__pycache__": true,
    "**/node_modules": true,
    ".vscode-test": false,
    ".vscode test": false,
    "**/.mypy_cache/**": true
  },
  "search.exclude": {
    "out": true, // set this to false to include "out" folder in search results
    "dist": true,
    "**/node_modules": true,
    "coverage": true,
    "languageServer*/**": true,
    ".vscode-test": true,
    ".vscode test": true
  },
  "vsintellicode.sql.completionsEnabled": false
}
