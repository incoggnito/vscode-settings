function b2v(){
	echo "bump2version --message '[{now:%Y-%m-%d}] $1 {new_version}' patch --allow-dirty"
	eval "bump2version --message '[{now:%Y-%m-%d}] $1 {new_version}' patch --allow-dirty"
}