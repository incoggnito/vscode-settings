{
  // Editor
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "first",
  "editor.cursorBlinking": "solid",
  "editor.snippetSuggestions": "bottom",

  // Workbench
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "Gruvbox Dark Hard",
  "workbench.iconTheme": "vscode-icons",

  // Python
  "python.defaultInterpreterPath": "${workspaceFolder}\\venv\\Scripts\\python.exe",
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.sortImports.path": "${workspaceFolder}\\venv\\Scripts\\isort.exe",
  "python.formatting.blackPath": "${workspaceFolder}\\venv\\Scripts\\black.exe",
  "python.linting.mypyPath": "${workspaceFolder}\\venv\\Scripts\\mypy.exe",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.venvFolders": ["venv", ".venv"],
  "python.terminal.activateEnvironment": true,
  "python.terminal.launchArgs": ["-m", "IPython", "--no-autoindent"],
  "python.linting.pylintEnabled": true,
  "python.linting.pylintPath": "${workspaceFolder}\\venv\\Scripts\\pylint.exe",
  "python.linting.pylintCategorySeverity.warning": "Hint",
  "python.linting.maxNumberOfProblems": 100,
  "python.linting.pylintArgs": ["--enable=W0614"],
  "python.testing.pytestPath": "${workspaceFolder}\\venv\\Scripts\\pytest.exe",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  

  // Git
  "git.autofetch": true,
  "git.ignoreRebaseWarning": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.codeLens.enabled": true,
  "git.enableSmartCommit": true,
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
    "branch-create:command"
  ],

  // Terminal
  "terminal.integrated.fontFamily": " MesloLGS NF",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.enableBell": false,
  "terminal.integrated.defaultProfile.windows": "Git Bash",

  // Mermaid
  "mermaid-editor.preview.theme": "dark",
  "mermaid-editor.preview.backgroundColor": "white",
  "mermaid-editor.generate.type": "svg",

  // RevealJS
  "revealjs.slideNumber": true,
  "revealjs.theme": "simple",
  "revealjs.highlightTheme": "Gruvbox",
  "revealjs.browserPath": "C:\\Users\\ahofer\\AppData\\Local\\BraveSoftware\\Brave-Browser\\Application\\brave.exe",

  // Kite
  "kite.showWelcomeNotificationOnStartup": false,

  // Project Manager
  "projectManager.svn.maxDepthRecursion": 1,
  "projectManager.git.maxDepthRecursion": 1,
  "projectManager.any.maxDepthRecursion": 1,
  "projectManager.git.baseFolders": [
    "$home\\AppData\\Roaming\\Code\\User",
    "C:\\Projekt"
  ],
  "projectManager.git.ignoredFolders": [
    "node_modules",
    "out",
    "typings",
    "test",
    ".haxelib",
    "venv"
  ],

  // Spell
  "cSpell.language": "en,de",

  // VIM
  "vim.easymotion": true,
  "vim.surround": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 400,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    },
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["U"],
      "commands": ["redo"]
    },
    {
      "before": ["<esc><esc>"],
      "commands": [":nohl"]
    },
    {
      "before": ["H"],
      "commands": ["$"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    // Select all
    "<C-a>": false,
    // VS Code search in file
    "<C-f>": false,
    // VS Code new marker @ next occurence
    "<C-d>": false,
    // Copy
    "<C-c>": false,
    // Cut
    "<C-x>": false,
    // Paste
    "<C-v>": false
  },

  //DrawIO
  "todo-tree.tree.showScanModeButton": false,
  "todo-tree.general.tags": [
    "BUG",
    "HACK",
    "FIXME",
    "TODO",
    "XXX",
    "[ ]",
    "[x]"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "jupyter.askForKernelRestart": false,
  "interactiveWindow.collapseCellInputCode": "never",
  "editor.largeFileOptimizations": false,
  // Gitlab
  "gitlab.ignoreCertificateErrors": true,
  "gitlab.instanceUrl": "https://git.amitronics.net/",
  "projectManager.svn.ignoredFolders": [
    "node_modules",
    "out",
    "typings",
    "test",
    "venv"
  ],
  "projectManager.hg.maxDepthRecursion": 1,
  "projectManager.hg.ignoredFolders": [
    "node_modules",
    "out",
    "typings",
    "test",
    ".haxelib",
    "venv"
  ],
  "projectManager.vscode.ignoredFolders": [
    "node_modules",
    "out",
    "typings",
    "test",
    "venv"
  ],
  "vsicons.dontShowNewVersionMessage": true,
  "security.workspace.trust.untrustedFiles": "open",
  "redhat.telemetry.enabled": false,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "files.autoSave": "onFocusChange",
  "bracket-pair-colorizer-2.depreciation-notice": false,
  "remote.SSH.remotePlatform": {
    "192.168.105.59": "linux",
    "DockerVM": "linux",
    "App": "linux",
    "DockerDev": "linux",
    "192.168.105.108": "linux"
  },
  "cSpell.userWords": ["filt", "Kanban", "postgresql", "sqlalchemy", "TISAX"],
  "tabnine.experimentalAutoImports": true,
  "explorer.confirmDelete": false,
  "task.problemMatchers.neverPrompt": {
    "austin": true
  },
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "diffEditor.ignoreTrimWhitespace": false
}
